    if a == 29: k = 'двадцать девятое'
    if a == 30: k = 'тридцатое'
    if a == 31: k = 'тридцать первое'
if 1 <= b <= 12:
    if b == 1: m = 'января'
    if b == 2: m = 'февраля'
    if b == 3: m = 'марта'
    if b == 4: m = 'апреля'
    if b == 5: m = 'мая'
    if b == 6: m = 'июня'
