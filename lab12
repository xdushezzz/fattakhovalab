    if b == 10: m = 'октября'
    if b == 11: m = 'ноября'
    if b == 12: m = 'декабря'
print(k, m)
print('Задание 2')
print("Введите исходное направление робота(С, Ю, В, З)")
c = str(input())
print("Введите комманду(1, 0, -1)")
n = int(input())
if c == 'С' and n == 0:
    print('C')
elif c == 'С' and n == 1:
    print('З')
elif c == 'С' and n == -1:
    print('В')
elif c == 'Ю' and n == 0:
    print('Ю')
elif c == 'Ю' and n == 1:
    print('В')
elif c == 'Ю' and n == -1:
    print('З')
elif c == 'В' and n == 0:
    print('В')
elif c == 'В' and n == 1:
    print('С')
elif c == 'В' and n == -1:
    print('Ю')
elif c == 'З' and n == 0:
    print('З')
elif c == 'З' and n == 1:
    print('Ю')
elif c == 'З' and n == -1:
    print('С')
