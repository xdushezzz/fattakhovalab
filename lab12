    if a == 20: k = 'двадцатое'
    if a == 21: k = 'двадцать первое'
    if a == 22: k = 'двадцать второе'
    if a == 23: k = 'двадцать третье'
    if a == 24: k = 'двадцать четвертое'
    if a == 25: k = 'двадцать пятое'
