    print(k, l, m)
print('Задание 5')
print('Введите год')
a = int(input())
b = a%10
d = a%12
if b == 0 or b == 1: k = 'бел'
if b == 2 or b == 3: k = 'черн'
if b == 4 or b == 5: k = 'зелен'
if b == 6 or b == 7: k = 'красн'
if b == 8 or b == 9: k = 'желт'
if d == 4: l = 'крысы'
if d == 5: l = 'коровы'
if d == 6: l = 'тигра'
if d == 7: l = 'зайца'
if d == 8: l = 'дракона'
if d == 9: l = 'змеи'
if d == 10: l = 'лошади'
if d == 11: l = 'овцы'
if d == 0: l = 'обезьяны'
if d == 1: l = 'курицы'
if d == 2: l = 'собаки'
if d == 3: l = 'свиньи'
m = 'ой'
n = 'ого'
if d in [0, 1, 2, 3, 4, 5, 9, 10, 11]:
    print(a, '- год', k+m, l)
if d not in [0, 1, 2, 3, 4, 5, 9, 10, 11]:
    print(a, '- год', k+n, l)
